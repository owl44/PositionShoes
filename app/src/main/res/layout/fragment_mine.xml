<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mine_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/wo__bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/head_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/head_image"
            android:scaleType="fitXY"
            app:sriv_border_width="2dp"
            app:sriv_border_color="@color/head_border"
            app:sriv_left_top_corner_radius="100dp"
            app:sriv_right_top_corner_radius="100dp"
            app:sriv_left_bottom_corner_radius="100dp"
            app:sriv_right_bottom_corner_radius="100dp"/>

        <TextView
            android:id="@+id/name_id"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="802231" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"/>
    
    <LinearLayout
        android:id="@+id/mine_equipment"
        android:padding="7dp"
        android:background="@drawable/click_select_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/wo_shebei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="我的设备"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#999999"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/mine_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/mine_step_data"
        android:padding="7dp"
        android:background="@drawable/click_select_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/wo_shuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="计步数据"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="#999999"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/mine_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/mine_problem"
        android:padding="7dp"
        android:background="@drawable/click_select_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/wo_wenti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="常见问题"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#999999"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/mine_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/mine_about"
        android:padding="7dp"
        android:background="@drawable/click_select_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/wo_guanyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="关于我们"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"  />

        <TextView
            android:textColor="#999999"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/mine_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/mine_set"
        android:padding="7dp"
        android:background="@drawable/click_select_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/wo_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="设&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;置"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent"  />

        <TextView
            android:textColor="#999999"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/mine_go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>